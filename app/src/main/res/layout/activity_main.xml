<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_relative_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.github.paolorotolo.happily.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_main_relative_background">
        <TextView
            android:id="@+id/activity_main_start_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Smile to get your daily happy quote :)"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingBottom="64dp"
            android:textColor="#80ffffff"
            android:textSize="24sp"/>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/activity_main_cardview_quote"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginRight="-16dp"
                android:layout_marginLeft="-16dp"
                android:layout_centerVertical="true"
                card_view:cardCornerRadius="4dp"
                android:visibility="invisible">
                <TextView
                    android:id="@+id/activity_main_textview_quote"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="32dp"
                    android:textSize="28sp"
                    android:background="#ffffff"
                    android:textAlignment="center"
                    android:textColor="#222222"
                    android:text="Getting your daily happy quote..."/>
            </android.support.v7.widget.CardView>
        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/activity_main_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:indeterminate="false"
            app:mpb_useIntrinsicPadding="false"
            app:mpb_progressTint="#ffffff"
            app:mpb_progressStyle="horizontal"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/activity_main_fab_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/activity_main_cardview_quote"
            android:visibility="invisible"
            android:layout_marginTop="-32dp"
            app:fabSize="normal"
            android:src="@drawable/ic_share_black_24dp"
            android:layout_marginRight="16dp" />
    </RelativeLayout>
</RelativeLayout>